<Window x:Class="OOPXmasExam2019.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPXmasExam2019"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxAllPlayers" HorizontalAlignment="Left" Height="288" Margin="71,77,0,0" VerticalAlignment="Top" Width="196"/>
        <ListBox x:Name="lbxSelectedPlayers" HorizontalAlignment="Left" Height="288" Margin="508,77,0,0" VerticalAlignment="Top" Width="206"/>
        <Button x:Name="btnAdd" Content="Add &gt;&gt;" HorizontalAlignment="Left" Margin="345,134,0,0" VerticalAlignment="Top" Width="75" Click="BtnAdd_Click"/>
        <Button x:Name="btnRemove" Content="&lt;&lt; Remove" HorizontalAlignment="Left" Margin="345,249,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="tbkAllPlayers" HorizontalAlignment="Left" Margin="71,56,0,0" TextWrapping="Wrap" Text="All Players" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkSelectedPlayers" HorizontalAlignment="Left" Margin="508,56,0,0" TextWrapping="Wrap" Text="Selected Players" VerticalAlignment="Top"/>

    </Grid>
</Window>
